{
    "name": "tg-asana-bot",
    "version": "0.1.0",
    "description": "automate to create a task on asana via telegram bot",
    "scripts": {
        "lint": "eslint .",
        "format": "eslint . --fix",
        "typecheck": "tsc",
        "build": "tsc --noEmit false",
        "dev": "tsc-watch --onSuccess \"tsx ./api/bot.ts\"",
        "start": "tsx ./api/bot.ts",
        "start:force": "tsx ./api/bot.ts"
    },
    "devDependencies": {
        "@types/asana": "^0.18.16",
        "@types/node": "^22.10.5",
        "tsc-watch": "^6.2.1",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "asana": "^3.0.12",
        "axios": "^1.7.9",
        "dotenv": "^16.4.7",
        "grammy": "^1.34.0",
        "tsx": "^4.19.2",
        "zod": "^3.24.1"
    }
}
